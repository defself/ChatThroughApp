<!DOCTYPE html>
<html>
  <head>
    <title>ChatThroughApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
      <% if user_signed_in? %>
        <li>
          <%= link_to("Logout", destroy_user_session_path, method: :delete) %>
        </li>
        <li>
          <%= "Hi @#{current_user.user_name}!" %>
        </li>
      <% else %>
        <li>
        <%= link_to("Login", new_user_session_path) %>
        </li>
      <% end %>
    </ul>
    <%- if current_user && !current_user.slack_authorized? %>
      <%= render "layouts/slack_button" %>
    <%- end %>

    <%= yield %>

    <% if Rails.env.development? %>
      <ul>
        <li>
          <%= link_to("Wake up bots", wake_up_bots_path, method: :post) %>
        </li>
        <li>
          <%= link_to("Kill bots", kill_bots_path, method: :delete) %>
        </li>
      </ul>
    <% end %>
  </body>
</html>
